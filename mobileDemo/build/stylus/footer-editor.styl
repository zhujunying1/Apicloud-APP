.editor-page
    overflow hidden
.editor-bar
    position fixed
    font-size .48rem
    color #22a891
    width 100%
    background #fff
    border-top 1px solid #eee
    left 0
    bottom 0
    z-index 3
    .switch
        height: 0.42rem
        background: #cfcfcf
        border-radius: 0.2rem
        padding: 0.02rem;
        color: #fff;
        font-size: 0.2rem;
        top .2rem
        right .3rem
        position absolute
        p
            float: right;
            width: 0.38rem;
            height: 0.38rem;
            border-radius: 50%;
            background: #fff;
        span
            font-size: 0.2rem;
            float: left;
            line-height: 0.4rem;
            padding 0 .1rem
        .switchp1
            float: left;
        .switchpsp
            float: right
        &[num="0"]
            background: #00a185
    .editor-tool
        position relative
        padding 0.1rem 1.2rem 0.1rem 1.6rem
        height .8rem
        i,.btn
            position absolute
            line-height .6rem
            top 0
        i
            padding 0 .1rem
        .icon-picture2,.icon-cut,.switch
            display none
        .icon-recording-o
            left .1rem
            top .1rem
        .icon-picture
            left .8rem
            top .1rem
        .btn
            right 0.2rem
            top .1rem
        .textarea
            border 1px solid #eee
            border-radius .1rem
            height .6rem
            padding .1rem
            width 100%
            font-size .22rem
            display block
            margin 0
            color #666
            resize none

    &.bar2,&.bar4
        .textarea,.btn
            display: none
        .editor-tool
            background: #e2e2e2
            .switch
                display: block
            .icon-recording-o
                left .3rem
                color #22a891
            .icon-picture
                left 1.2rem
                color #22a891

    &.bar3,&.bar5
        background: #fff;
        min-height: 0.99rem;
        padding-top: 0.2rem;
        max-width: 1280px;
        border-top: 1px solid #b5afaf;
        .icon-picture2
            left 0.2rem
            top 0
        .icon-recording-o
            left 1rem
            top 0
        .editor-tool
            .switch,.icon-picture2
                display: block
            .icon-picture,.btn,.textarea
                display none

    &.bar4,&.bar5
        .editor-tool
            .switch
                display: none
.newaudio,.newimg
    padding .1rem
    display none
    height 3.2rem

.newimg
    overflow auto
    box-sizing border-box
    padding 0rem 0.3rem 0rem 0.3rem
    > p
        padding-right .4rem
        color #999999
        font-size 0.24rem
        text-align right
        position absolute
        width 100%


.adchimg
    white-space nowrap
    margin .75rem 0 0 -.1rem
    padding-bottom 0.1rem
    .checkimg,.addimg
        width 2rem
        height 2rem
        display inline-block
        text-align center
        line-height 2rem
        vertical-align top
        margin 0 .1rem

    .checkimg
        position relative
        background-size cover
        background-position center
        background-repeat no-repeat
        border 1px solid #e5e5e5
        i
            position absolute
            top -.1rem
            right -.1rem
            width 0.45rem
            height 0.45rem
            line-height .4rem
            text-align center
            border-radius 50%
            font-size .24rem
            color #fff
            background $color_green
            border 1px solid #fff

    .addimg
        border 2px dashed #e0e0e0
        font-size .8rem
        color #ccc

.newaudio
    text-align center
    .audio
        position relative
        width 2.5rem
        height 2.5rem
        margin 0 auto
        z-index 100000
        i
            background #ccc
            color #fff
            width 2rem
            height 2rem
            font-size 1.6rem !important
            line-height 2rem
            border-radius 50%
            &.icon-play
                font-size 1.2rem !important
                background $color_green
                display none
        &.ing
            .icon-recording
                background $color_green
        &.end
            .icon-play
                display inline-block
                &.play::before
                    content '\e95f'
                    font-size 2rem !important


    .newaut
        width 100%
        text-align center
        font-size 0.24rem
        color #999999
        margin-top .2rem
    .newtip,button,.voice-player
        position absolute
    .newtip
        left 0.4rem
        top 1.9rem
        color #00a185
        font-size 0.6rem
        &:after
            content '"'
            margin-left .1rem

    button
        top 1.9rem
        right 0.42rem
        width 1.5rem
        height 0.65rem
        outline none
        border 1px solid #b5afaf
        font-size 0.36rem
        border-radius 0.1rem
        background #f5f5f5
        z-index 100000

    .voice-player
        width 1.4rem
        left .2rem
        top .8rem
        display none

.voice-player
    text-align right
    width 2rem
    border-radius .1rem
    padding 0 .2rem
    color #fff
    b,i
        position absolute
    b
        left .3rem
        font-size .24rem
    b:after
        content '"'
        margin-left .1rem
    i
        font-size .26rem
        right .2rem
        top .06rem
    .icon-spinner
        top .1rem
    .icon_box
        right 0
    .icon-spinner
        display none
        -webkit-animation:zhuan 1s linear infinite;
    &.loading
        .icon_box
            display none
        .icon-spinner
            display block
    &.play
        .icon-rss3,.icon-rss2
            -webkit-animation:bf3 1s infinite
.backdrop-set-img
    z-index 5
.set-photo,.set-photo-video
    position absolute
    z-index 156
    font-size .3rem
    width 6rem
    background #fff
    border-radius .18rem
    top 50%
    left 50%
    margin -2rem 0 0 -3rem
    color #666
    display none
    li
        padding .3rem
        border-top 1px solid #eee
        &:first-child
            text-align center
            padding .4rem
            border-top 0

.backdrop1
    position fixed
    top 0
    left 0
    bottom 0
    right 0
    background rgba(0,0,0,0.4)
    z-index 100
    display none



@media screen and (orientation: landscape)
    .set-photo
        width 4rem
        font-size .2rem
        margin -1rem 0 0 -2rem
        li
            padding .1rem .2rem

            &:first-child
                padding .2rem