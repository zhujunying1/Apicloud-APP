    script(type="text/javascript").
      function my_close() {
      api.sendEvent({
      name: 'flush_catalog'
      });
      api.closeWin();
      }
      apiready = function () {
      var header = $api.byId('header');
      $api.fixIos7Bar(header);
      var headerPos = $api.offset(header);
      var width = api.winWidth;
      var height = api.winHeight - headerPos.h;
      api.openFrame({
      name: 'tasks-cache-f',
      url: 'tasks-cache-f.html',
      reload: true,
      bounces: true,
      opaque: true,
      vScrollBarEnabled: false,
      bgColor: '#fff',
      rect: {
      x: 0,
      y: headerPos.h,
      w: width,
      h: height
      },
      pageParam: api.pageParam
      });
      api.addEventListener({
      name: 'keyback'
      }, function () {
      my_close();
      });
      api.addEventListener({
      name: 'cancle_del'
      }, function () {
      $('.right li').addClass('hide');
      $('.right li').eq(0).removeClass('hide');
      });
      };
      function checkDownlond(e) {
      api.sendEvent({
      name: 'opena',
      extra: {sethomepage: e}
      });
      }
      function showSet() {
      checkDownlond(1);
      $('.right li').removeClass('hide');
      $(this).addClass('hide');
      }
      //取消
      function setAll1() {
      checkDownlond(2);
      $('.right li').addClass('hide');
      $('.right li').eq(0).removeClass('hide');
      }
      //全选
      function setAll2() {
      checkDownlond(3);
      }