extends ../layout/layout

block body
    -var cont = '注册协议'
    include ../modules/header

block scripts
    script(type="text/javascript").
        apiready = function () {
            var header = $api.byId('header');
            $api.fixIos7Bar(header);
            var headerPos = $api.offset(header);
            var width = api.winWidth;
            var height = api.winHeight - headerPos.h;
            api.openFrame({
                name: 'user_protocol',
                url: 'http://www.caicui.com/help/ff80808147db71340147f60c159a0411?client=mobile',
                bgColor: '#fff',
                bounces: true,
                opaque: true,
                reload: true,
                vScrollBarEnabled: false,
                rect: {
                    x: 0,
                    y: headerPos.h,
                    w: width,
                    h: height
                }
            });
        };
