/**通用图片组**/
.pic-group
    margin .3rem 0
    font-size 0
    white-space nowrap
    position relative
    overflow hidden
    width 100%
    li
        display inline-block
        width 32%
        margin 0 1%
        height 2rem
        line-height 2rem
        text-align center
        background #eee no-repeat center
        background-size cover

    b
        position absolute
        z-index 5
        top 1.6rem
        background-color rgba(0,0,0,0.5)
        color #fff
        height 0.4rem
        width 1rem
        text-align center
        line-height 0.4rem
        font-size 0.22rem
        margin-left -1%
        transform translate(-100%, 0)
        -webkit-transform translate(-100%, 0)

