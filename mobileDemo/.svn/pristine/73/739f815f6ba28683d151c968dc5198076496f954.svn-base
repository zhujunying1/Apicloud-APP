extends ../layout/layout
extends ../layout/layout
block head
    link(rel='stylesheet', type='text/css', href='../css/z_style.css')
block body
    -var cont = '课程问答'
    include ../modules/header
block scripts
    script.
        apiready = function () {
            var header = $api.byId('header');
            $api.fixIos7Bar(header);
            var headerPos = $api.offset(header);
            var width = api.winWidth;
            var height = api.winHeight - headerPos.h;
            api.openFrame({
                name: 'course-aq-f',
                url: 'course-aq-f.html',
                bounces: true,
                opaque: true,
                reload: true,
                vScrollBarEnabled: false,
                rect: {
                    x: 0,
                    y: headerPos.h,
                    w: width,
                    h: height
                }
            });
        };