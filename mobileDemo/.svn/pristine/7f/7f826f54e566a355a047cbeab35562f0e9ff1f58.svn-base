<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,width=device-width,initial-scale=1.0">
    <meta name="format-detection" content="telephone=no">
    <link rel="stylesheet" type="text/css" href="../css/api.css">
    <link rel="stylesheet" type="text/css" href="../css/common.css">
    <link rel="stylesheet" type="text/css" href="../css/common-component.css">
    <link rel="stylesheet" type="text/css" href="../css/font-icon.css">
    <link rel="stylesheet" type="text/css" href="../css/reset.css">
    <link rel="stylesheet" type="text/css" href="../css/caicui.css">
    <script type="text/javascript" src="../script/api.js"></script>
    <script type="text/javascript" src="../script/zepto.js"></script>
    <link rel="stylesheet" href="../css/Sstyle.css">
  </head>
  <body>
    <div class="grayHastop pot none">
      <div onclick="open_img()" tapmode="" class="headPic js-WEqualH"><img class="head"></div>
      <label for="" class="lab adjust-height">
        <input name="nickname" type="text" placeholder="用户名">
        <input name="imgPath" type="hidden" value=""><span class="form-tips">可用于登录</span>
        <!--这个客户产品太可恶了，故意找茬拖着几个月都不验收项目，很多问题其实连他们自己同事都看不下去了。（上面本应该是“登录”，但他给的设计图是登陆。呵呵）-->
      </label>
      <input type="button" value="保存" onclick="next()" tapmode="" class="greenBtm start adjust-height">
    </div>
    <script type="text/javascript" src="../script/comm.js"></script>
    <script type="text/javascript" src="../script/doT.min.js"></script>
    <script type="text/javascript" src="../script/caicui.js"></script>
    <script type="text/javascript" src="../script/db.js"></script>
    <script type="text/javascript" src="../script/saveTasksProgress.js"></script>
    <script type="text/javascript">
      var imgPath = '', height = $api.getStorage('height') ? $api.getStorage('height') : 1080, width = $api.getStorage('width') ? $api.getStorage('width') : 1080;
      function open_img() {
          var $body = $api.dom('body');
          var width = $api.offset($body).w;
          var bodyH = api.pageParam.bodyH;
          api.openFrame({
              name: 'sign-photo-f',
              url: 'sign-photo-f.html',
              opaque: false,
              reload: true,
              bgColor: "rgba(0,0,0,0.05)",
              rect: {
                  x: 0,
                  y: 0,
                  w: width,
                  h: bodyH
              }
          });
      }
      function next() {
          var nickname = $.trim($('input[name=nickname]').val());
          if (nickname == '') {
              api.toast({
                  msg: '用户名不能为空',
                  location: 'middle'
              });
              return false;
          }
          /*var regex=/^[a-zA-Z]\w{4,20}$/;
           if (!regex.test(nickname)) {
           api.toast({
           msg : '用户名必须为5-20个字符,可以是数字、字符,首字符必须是字母',
           location : 'middle'
           });
           return false;
           }*/
          if (imgPath == '') {
              api.toast({
                  msg: '请上传头像',
                  location: 'middle'
              });
              return false;
          }
          var obj = {};
          obj.nickname = nickname;
          obj.imgPath = imgPath;
          obj.height = height;
          obj.width = width;
          obj.token = $api.getStorage('token');
          api.showProgress({
              title: '处理中',
              modal: false
          });
          ajaxRequest('api/v2.1/cutAndSaveAvatar', 'post', obj, function (ret, err) {//007.012  完善用户信息
              api.hideProgress();
              if (err) {
                  api.toast({
                      msg: err.msg,
                      location: 'middle'
                  });
                  return false;
              }
              if (ret && ret.state == 'success') {
                  $api.setStorage('token', ret.data.token);
                  ajaxRequest('api/v2/member/get', 'get', {token: ret.data.token}, function (res, error) {
                      if (error) {
                          api.toast({
                              msg: error.msg,
                              location: 'middle'
                          });
                          return false;
                      }
                      if (res) {
                          $api.setStorage('mine', res.data);
                          api.sendEvent({
                              name: 'modify'
                          });
                          api.closeWin();
                      }
                  });
              } else {
                  api.toast({
                      msg: err_conf_007[ret.msg],
                      location: 'middle'
                  });
              }
          });
      }
      apiready = function () {
          /*var avatar=isEmpty(api.pageParam.avatar) ? '' : api.pageParam.avatar;
           if(avatar){
           imgPath=avatar;
           width=200;
           height=200;
           $('.head').attr('src', static_url + avatar);
           }*/
          imgPath = getstor('avatar');
          $('.head').attr('src', static_url + imgPath + '?s=' + Math.random());
          var nickName = isEmpty(get_loc_val('mine', 'nickName')) ? '' : get_loc_val('mine', 'nickName');
          if (nickName) {
              $('input[name=nickname]').val(nickName);
          }
          commonFun.adjustHeight(0.077);
          $('.grayHastop').removeClass('none');
          api.addEventListener({
              name: 'photo_change'
          }, function (ret, err) {
              var value = ret.value;
              var mine = $api.getStorage('mine');
              imgPath = value.path;
              mine.avatar = imgPath;
              $('.head').attr('src', static_url + value.path + '?s=' + Math.random());
              $api.setStorage('mine', mine);
              width = value.width;
              $api.setStorage('width', width);
              height = value.height;
              $api.setStorage('height', height);
              api.sendEvent({
                  name: 'modify'
              });
          });
      };
    </script>
  </body>
</html>