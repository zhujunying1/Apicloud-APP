/*
#########底部导航栏组件
*/
.bottom-navigator{
    display: flex;
    display: -webkit-flex;
    /*伸缩项目在伸缩容器中按水平方式显示*/
    flex-direction:row;
    -webkit-flex-direction: row;
    -ms-flex-direction: row;
    /*伸缩容器是单行还是多行显示*/
    flex-wrap:wrap;
    -webkit-flex-wrap:wrap;
    -ms-flex-wrap:wrap;
    /*//多块状元素水平居中*/
    /*flex-flow 是flex-flow和flex-wrap的缩写版本*/
    -webkit-justify-content: center;
    /*伸缩项目在伸缩容器中的垂直显示方式*/
    align-items: center;
    -webkit-align-items: center;
    -ms-align-items:center;

    background-color: #fff;
    position:fixed;
    bottom:0;
    height:9%;
    width:100%;
    text-align: center;
    z-index: 9999;
}
.bottom-navigator>div{
    font-size: 1px;
    flex:1;
    /*兼容iOS*/
    -webkit-flex:1;
    height:77%;
    text-align: center;
}
.bottom-navigator>div img{
    display: inline-block;
    height:62%;
}
.bottom-navigator p{
    font-size: 0.22rem;
    color:#646464;
}
