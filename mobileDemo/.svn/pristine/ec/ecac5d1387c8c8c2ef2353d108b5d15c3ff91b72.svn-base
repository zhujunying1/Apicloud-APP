/*
###################开关组件
*/
.checkbox {
    display: inline-block;
    box-sizing: border-box;
    text-align: center;
    height:54%;
    width:12.8%;
    outline:none;
    border: none;
    -webkit-border-radius: 50px;
    overflow: hidden;
}
.checkbox:after, .checkbox:before {
    box-sizing: border-box;
    -webkit-font-feature-settings: normal;
    -moz-font-feature-settings: normal;
    font-feature-settings: normal;
    -webkit-font-kerning: auto;
    -moz-font-kerning: auto;
    font-kerning: auto;
    -webkit-font-language-override: normal;
    -moz-font-language-override: normal;
    font-language-override: normal;
    font-stretch: normal;
    font-style: normal;
    font-synthesis: weight style;
    font-variant: normal;
    font-weight: normal;
    text-rendering: auto;
    outline:none;
}
.checkbox label {
    position: absolute;
    left: 0;
    display: block;
    -webkit-border-radius: 50px;
    -webkit-transition: 0.6s;
    transition: 0.6s;
    height: 100%;
    width: 100%;
    outline: none;
    background: #dcdcdc;
    overflow: hidden;

}
.checkbox label:after {
    box-sizing: border-box;
    content: '';
    position: absolute;
    border-radius: 100%;
    z-index: 2;
    -webkit-transition: 0.4s;
    transition: 0.4s;
    background: #fff;
    top: 6%;
    left: 5%;
    width: 45%;
    height:84%;
    outline: none;
}
.checkbox input {
    box-sizing: border-box;
    position: absolute;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 5;
    opacity: 0;
    cursor: pointer;
    border: none;
    background-color: #00a185;
    outline: none;
    display: block;
    /*checkbox点击会有阴影*/
    -webkit-tap-highlight-color: transparent;
}
.checkbox input:focus{
    outline:none;
    background-color: transparent;
}
.checkbox input:checked + label {
    outline: none;
    background: #00a185;
}
.checkbox input:checked + label:after {
    outline: none;
    box-sizing: border-box;
    background: #fff;
    left: 50%;
}
.checkbox input:checked{
    outline:none;
    background-color: transparent;
}
.checkbox input::-webkit-keygen-select{
    outline: none;
    background: transparent;
}
