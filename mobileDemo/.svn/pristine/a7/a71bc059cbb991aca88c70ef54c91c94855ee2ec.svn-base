extends ../layout/layout
block html
    -var htmlClass = 'transparent'
block body
    .backdrop.opacity
    ul.dropdown-menu
        li 最新回复
        li 发帖时间
        li 精华讨论
        li 回复数量
block scripts
    script.
        //下拉样式
        $('.dropdown-menu li').click(function () {
            var val = $(this).text();
            api.sendEvent({
                name: 'sort',
                extra: {key: val}
            });
            api.closeFrame();
        });
        $('.backdrop').on('click', function () {
            api.closeFrame();

        });



