block scripts
    script.
        $('.analyze_btn').click(function(){
            if($(this).siblings('.analyze_con').hasClass('hide')){
                $(this).siblings('.analyze_con').removeClass('hide');
                $(this).find('span').html('收起解析');
            }
            else{
                $(this).siblings('.analyze_con').addClass('hide');
                $(this).find('span').html('展开解析');
            }
        })
        var a=0;
        var b=$('.cur_des li').length;
        var li_w=$('.cur_des li').width();
        var cur_des=$('.cur_des ul').width();
        $(".pre").click(function(){
            if(a==0){
                $(".cur_des ul").animate({marginLeft:0},"slow");
            }
            else{
                a--;
                a=(a+b)%b;
                $(".cur_des ul").animate({marginLeft:-li_w*a},"slow");
            }
        });
        $(".next").click(function(){
            if(a==b-1){
                $(".cur_des ul").animate({marginRight:0},"slow");
            }
            else{
                a++;
                a=a%b;
                $(".cur_des ul").animate({marginLeft:-li_w*a},"slow");
            }
        });

                                                          