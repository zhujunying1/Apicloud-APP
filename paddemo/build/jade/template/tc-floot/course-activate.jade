                        .class_intro 上次学习到：Chapter 11 external environm...
                        .class_video
                            .video_box
                                .video_icon
                                .video_num
                                    span.v_num 45
                                    span.t_num / 70
                            .note_box
                                .note_icon
                                .video_num
                                    span.v_num 45
                                    span.t_num / 70
                        .study_progress
                            .progress_line
                                .line_box
                        .buy_again
                            .at_activate 再次购买
block scripts
    script.
        $('.head_tab li').eq(0).addClass('itrems');
        $('.head_tab li').click(function(){
            $('.head_tab li').removeClass('itrems');
            $(this).addClass('itrems');
            var index = $('.head_tab li').index(this);
            $('.tab_con > ul').eq(index).show().siblings().hide();
        })