extends ../layout/layout
block html
    -var htmlclass='transparent editor-page'
block body
    //- link(rel='stylesheet', type='text/css', href='../css/footer-editor.css')
    .backdrop1
    .backdrop.opacity(onclick="toggleEditor('mini')")
    ul.set-photo
        li 上传图片
        li(tapmode='', onclick="getPic('camera',1024,768)") 拍照
        li(tapmode='', onclick="getPic('album',1024,768)") 选择本地图片
    .editor-bar(type='1')
        .editor-tool
            textarea.textarea(onfocus="my_focus()", placeholder="问题补充：")
            i.icon-picture2(onclick="open_edit(this)")
            i.icon-recording-o(onclick="open_edit(this)")
            .btn.btn-success(tapmode,onclick="sub(this)") 提交
            .switch
                p
                span 私人
        .newaudio
            #audio.audio.audio-progress
                i.icon-recording
                .val 0
                i.icon-play(tapmode, url="", onclick="playAudioMe(this)",bg, time="34")
            p.newaut 按住开始录音
            p.newtip 0.0
            button(onclick="resetAudio()") 重录
        .newimg
            p 最多可添加五张图片
            .adchimg
                .addimg(onclick='open_img()')
                    i.icon-plus
block scripts
    script(src='../script/pagejs/footer-answer.js', type='text/javascript')
