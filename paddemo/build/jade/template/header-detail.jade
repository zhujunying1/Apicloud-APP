extends ../layout/layout
block head
    title 我的问答详情
    link(rel='stylesheet', type='text/css', href='../css/cckt.css')
block body
    //头部
    .s-head#header
        .left(tapmode, onclick='api.closeWin()')
            i.icon-back
        .center 我的问答详情（已回复）
        .right
            i.icon-trash
block scripts
    script(type="text/javascript").
        apiready=function(){
            api.openFrame({
                delay:200,
                bounces: true,
                opaque: true,
                reload: true,
                vScrollBarEnabled: false,
                name: 'my_answer_details',
                url: 'my_answer_details.html',
                pageParam: {id: api.pageParam.id},
                rect: {
                    x: leftSw,
                    y: headSh,
                    w: api.winWidth - leftSw,
                    h: api.winHeight - headSh
                }
            });
            api.addEventListener({
                name: 'header-detail'
            }, function (ret) {
                if (ret && ret.value) {
                    var value = ret.value;
                    if(value.key1 == '11111'){
                        $('span').html('我的问答详情（已回复）');
                    }else if(value.key1 == '22222'){
                        $('span').html('我的问答详情（未回复）');
                    }
                }
            });
        };
