                    return false;
                }
                api.showProgress({
                    title: '修改中',
                    modal: true
                });
                is_click = false;
                ajaxRequest('api/studytools/discusssave/v2.1', 'post', param, function (ret, err) {//003.303.1  发布讨论
                    api.hideProgress();
                    if (err) {
                        is_click = true;
                        api.toast({
                            msg: err.msg,
                            location: 'middle'
                        });
                        return false;
                    }
                    if (ret && ret.state == 'success') {
                        $api.rmStorage('content');
                        $api.rmStorage('title');
                        $api.rmStorage('img');
                        $api.rmStorage('lx_duration');
                        $api.rmStorage('soundPath');
                        $api.rmStorage('isPublic');
                        $api.rmStorage('lx_lens');
                        $api.rmStorage('lx_soundPath');
                        api.sendEvent({
                            name: 'talk-edit-lx'
                        });
                        api.sendEvent({
                            name: 'talk_detail_f_hf'
                        });
                        window.localStorage.talkChange = '1';
                        openFme();
                        closeMe();
                    } else {
                        is_click = true;
                        api.toast({
                            msg: '接口异常',
                            location: 'middle'
                        });
                    }
                });
            }
            //api.sendEvent({
            //    name: 'talk-edit'
            //});

        }
