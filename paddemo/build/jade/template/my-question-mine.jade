extends ../layout/layout
block head
    title 请选择课程
block body
    .header.header-white#header
        .left(tapmode, onclick='closeMe()')
            i.icon-back
        .center 请选择课程
block scripts
    script(type="text/javascript").
        function closeMe(){
            api.closeFrame({
                name: 'my-question-mine-f'
            });
            api.closeFrame();
        }
        apiready=function(){
            var header = $api.byId('header');
            $api.fixIos7Bar(header);
            api.openFrame({
                delay:200,
                name: 'my-question-mine-f',
                url: 'my-question-mine-f.html',
                rect: {
                    x: leftLw,
                    y: headLh,
                    w: api.winWidth - leftLw,
                    h: api.winHeight - headLh
                },
                pageParam:api.pageParam,
                bounces: true
            });
            api.addEventListener({
                name: 'closeFrameAll'
            }, function () {
                api.closeFrame({
                    name:'my-question-mine-f'
                });
                api.closeFrame();
            });
        };
