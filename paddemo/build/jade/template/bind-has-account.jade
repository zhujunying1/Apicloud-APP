extends ../layout/layout
block body
    #header.header.header-black
        .left(onclick='api.closeWin()', tapmode='')
            i.icon-arrow-left
        .left-txt
            | 绑定财萃账号
block scripts
    script(type='text/javascript').
        apiready = function () {
            var header = $api.byId('header');
            $api.fixIos7Bar(header);
            var headerPos = $api.offset(header);
            var width = api.winWidth;
            var height = api.winHeight - headerPos.h;
            api.openFrame({
                name: 'bind-has-account-f',
                url: 'bind-has-account-f.html',
                bounces: true,
                opaque: true,
                reload: true,
                vScrollBarEnabled: false,
                rect: {
                    x: 0,
                    y: headerPos.h,
                    w: width,
                    h: height
                }
            });
        };


