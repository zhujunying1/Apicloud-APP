cir_w = 2rem
.circle-progress,.down-progress,.audio-progress
    width cir_w
    height cir_w
    position relative
    display inline-block
    vertical-align middle
    .text,.val,i
        position absolute
        left 0
        width 100%
        text-align center
    .text
        top 30%
    .val
        bottom 30%
        font-size .4rem
        &:after
            content '%'
    svg
        margin auto
        -webkit-transform rotate(-90deg)
        circle
            stroke-width 6
            fill none
            stroke rgba(255,255,255,.3)
            &:last-child
                stroke rgba(255,255,255,1)
                stroke-dasharray 1 1000

    i
        top 50%
        left 50%
        -webkit-transform translate(-50%,-50%)

.ios9,.android5
    .circle-progress,.down-progress,.audio-progress
        svg
            position absolute
            top 50%
            left 50%
            -webkit-transform translate(-50%,-50%) rotate(-90deg)

