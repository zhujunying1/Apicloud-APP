.chapter-task
    ul
        margin-top 0.2rem
        float left
        width 100%
    li
        font-size 0.3rem
        color #fff
        height 1.2rem
        line-height 1.2rem
        padding-left 0.3rem
        overflow hidden
        text-overflow ellipsis
        white-space nowrap
        position relative
        & > span
            position absolute
            left 5%
            top 50%
            -webkit-transform translateY(-50%)
            height 0.72rem
            width 0.72rem
            display inline-block
        & > div
            display inline-block
            width 80%
            position absolute
            left 10%
            top 50%
            -webkit-transform translateY(-50%)
            height 0.7rem
        p
            width 100%
            font-size 0.26rem
            line-height 0.5rem
            position relative
            span
                color #fff
        .v-name
            .span11
                overflow hidden
                text-overflow ellipsis
                white-space nowrap
                width 7rem
            span
                &:nth-child(1)
                    position absolute
                    left 0
                &:nth-child(2)
                    position absolute
                    right 0
        .v-progress
            height 0.1rem
            width 100%
            border-radius 0.08rem
            background-color #999999
            position absolute
            bottom 0.05rem
            span
                height 0.1rem
                background-color #00a085
                position absolute
                display block
                width 0%
                border-radius 0.08rem
    .video-catego  > span
            background url("../image/video-play-black.png") no-repeat
            background-size 100% 100%
    .note-catego  > span
            background url("../image/video-edit-black.png") no-repeat
            background-size 100% 100%
    .courseware-catego  > span
            background url("../image/video-chapter-balck.png") no-repeat
            background-size 100% 100%
.chapter-appendix
    .appendix-p  > span
            background url("../image/appendix-p.png") no-repeat
            background-size 100% 100%
    .appendix-w  > span
            background url("../image/appendix-w.png") no-repeat
            background-size 100% 100%
    .appendix-zip  > span
            background url("../image/appendix-zip.png") no-repeat
            background-size 100% 100%
    .appendix-pdf > span
            background url("../image/appendix-pdf.png") no-repeat
            background-size 100% 100%
    li
        .v-data
            height 0.28rem
            width 100%
            position absolute
            bottom 0
            span
                font-size 0.26rem
                &:nth-child(2)
                    margin-left 0.3rem
