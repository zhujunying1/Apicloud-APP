
.editor-page
    overflow hidden
.editor-bar
    position fixed
    font-size .48rem
    color #00a185
    width 100%
    background #fff
    box-shadow inset 0 1px 0 #eee
    left 0
    bottom 0
    z-index 3
    .switch
        height: 0.42rem
        border-radius: 0.2rem
        padding: 0.02rem;
        color: #fff;
        font-size: 0.2rem;
        top .4rem
        right .3rem
        position absolute
        background: #cfcfcf
        p
            float: right;
            width: 0.38rem;
            height: 0.38rem;
            border-radius: 50%;
            background: #fff;
        span
            font-size: 0.2rem;
            float: left;
            line-height: 0.4rem;
            padding 0 .1rem
        .switchp1
            float: left;
        .switchpsp
            float: right
        &[num="0"]
            background: #00a185
    .editor-tool
        position relative
        padding 0.3rem 1.7rem 0.3rem 1.6rem
        height 1.25rem
        display block
        i,.btn
            position absolute
            line-height .6rem
            top .3rem
        i
            padding 0 .1rem
        .icon-cut,.switch
            display none
        .btn
            right 0.05rem
            padding 0 .3rem
        .textarea
            position relative
            left 0.2rem
            border 1px solid #eee
            border-radius .1rem
            height .6rem
            padding .1rem
            width 97%
            font-size .22rem
            display block
            margin 0
            color #666
            resize none
            outline none
            -webkit-appearance none !important //-去掉ios内阴影

    &[type='1']
        .icon-recording-o
            left 0.9rem
        .icon-picture2
            left 0.2rem
        .editor-tool
            .btn,i,.textarea
                display none
    &[type='2']
        .textarea,.btn
            display: none
        .editor-tool
            .icon-recording-o
                right  1.2rem
                display: block
            .icon-picture2
                right  0.2rem
                display: block

    &[type='3']
        .icon-picture2
            right  1.8rem
            display: block
        .icon-recording-o
            right  2.8rem
            display: block
        .editor-tool
            .switch
                display: block
            .btn,.textarea
                display none
    &[hasimg="1"] .icon-picture2:after,&[hasaud="1"] .icon-recording-o:after
        content ''
        position absolute
        width .15rem
        height .15rem
        background #f30
        border-radius 50%
        margin-left -.1rem

.note-edit
    .editor-bar[type='2']
        .icon-picture2
            right  1.8rem
            display: block
        .icon-recording-o
            right  2.8rem
            display: block
        .editor-tool
            .switch
                display: block


.editor-bar .editor-tool
    .btn,i,.textarea
        display none
.newaudio,.newimg
    padding .5rem
    display none
    height 3.7rem
    background #f5f5f5

.newimg
    overflow auto
    box-sizing border-box
    padding 0 0.3rem 0 0.3rem
    > p
        padding-top .3rem
        color #999999
        font-size 0.24rem
        position absolute


.adchimg
    white-space nowrap
    margin .7rem 0 0 0
    padding-top 0.2rem
    overflow-x auto
    overflow-y hidden
    .checkimg,.addimg
        width 3.3rem
        height 2.5rem
        display inline-block
        margin-right .2rem
        text-align center
        vertical-align top

    .checkimg
        position relative
        background-size cover
        background-position center
        background-repeat no-repeat
        border 1px solid #e5e5e5
        i
            position absolute
            top -.1rem
            right -.1rem
            width 0.45rem
            height 0.45rem
            line-height .4rem
            text-align center
            border-radius 50%
            font-size .24rem
            color #fff
            background $color_green
            border 1px solid #fff

    .addimg
        border 2px dashed #e0e0e0
        color #fff
        text-align center
        position relative
        i
            width 1rem
            height 1rem
            background #ddd
            border-radius 50%
            padding .3rem
            top 50%
            left 50%
            margin -.5rem 0 0 -.5rem
            position absolute
.voice_wz
    position absolute
    top 0.3rem
    left 0.5rem
.newaudio
    text-align center
    .audio
        position relative
        width 2.5rem
        height 2.5rem
        margin 0 auto
        z-index 100000
        i
            background #ccc
            color #fff
            width 2rem
            height 2rem
            font-size 1.6rem !important
            line-height 2rem
            border-radius 50%
            &.icon-play
                font-size 1.2rem !important
                background $color_green
                display none
        &.ing
            .icon-recording
                background $color_green
        &.end
            .icon-play
                display inline-block
                &.play::before
                    content '\e95f'
                    font-size 2rem !important

    .newaut
        font-size 0.24rem
        color #00a185
        margin .9rem 0 0 25%
    .newtip,button,.newaut
        position absolute
        top 2.8rem
        left 45%
    .newtip
        left 60%
        margin-left -35%
        color #00a185
        font-size 0.6rem
        &:after
            content '"'
            margin-left .1rem

    button
        right 0
        margin-left 25%
        width 1.5rem
        height 0.65rem
        outline none
        border 1px solid #b5afaf
        font-size 0.36rem
        border-radius 0.1rem
        background #f5f5f5
        z-index 100000
        color #00a185

    .voice-player
        position absolute
        bottom 1.5rem
        left .3rem

.set-photo
    position absolute
    font-size .3rem
    width 6rem
    background #fff
    border-radius .18rem
    top 50%
    left 50%
    margin -2rem 0 0 -3rem
    color #666
    z-index 1000
    display none
    li
        padding .3rem
        border-top 1px solid #eee
        &:first-child
            text-align center
            padding .4rem
            border-top 0


